<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="madlamztheme" parent="android:Theme.DeviceDefault.Light.Dialog.NoActionBar" >
        <item name="android:colorBackground">@color/darkpurple</item>
        <item name="android:textColorPrimaryInverse">@color/darkpurple</item>
        <item name="android:textColorSecondaryInverse">@color/darkpurple</item>
        <item name="android:textColorSecondary">@color/darkpurple</item>
        <item name="android:textColorPrimary">@color/lightthemecolor</item>
    </style>

</resources>
